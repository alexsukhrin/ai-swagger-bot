# Environment variables for Serverless deployment
# Copy this file to .env and fill in your values

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Application Configuration
STAGE=dev
ENVIRONMENT=development
DEBUG=true

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ai_swagger_bot
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-database-password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security Configuration
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=*
ALLOWED_HOSTS=localhost,127.0.0.1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# API Configuration
API_PREFIX=/api/v1
API_TITLE=AI Swagger Bot API
API_VERSION=1.0.0
API_DESCRIPTION=API для роботи зі Swagger специфікаціями

# Lambda Configuration
LAMBDA_MEMORY_SIZE=1024
LAMBDA_TIMEOUT=30
LAMBDA_RUNTIME=python3.11

# Serverless Configuration
SERVERLESS_STAGE=dev
SERVERLESS_REGION=us-east-1
SERVERLESS_SERVICE=ai-swagger-bot

# Terraform Configuration
TF_VAR_ENVIRONMENT=dev
TF_VAR_AWS_REGION=us-east-1
TF_VAR_PROJECT_NAME=ai-swagger-bot

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_LOGGING=true
ENABLE_TRACING=false

# Feature Flags
ENABLE_GPT_ENHANCEMENT=true
ENABLE_API_CALLS=true
ENABLE_USER_ISOLATION=true
ENABLE_ADMIN_PANEL=true

# Development Configuration
ENABLE_HOT_RELOAD=false
ENABLE_DEBUG_MODE=true
ENABLE_TEST_MODE=false

# Production overrides (uncomment for production)
# STAGE=prod
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# ENABLE_DEBUG_MODE=false
# ENABLE_TEST_MODE=false
